        var oldPricedv = formatNumberToInt($("#giavondv_" + rowiddv).text());
        var price_numberdv = oldPricedv * soluongdv;
        var tempdv = price_numberdv;
        if (tempdv != '0') {
            $('#thanhtiendv_' + rowiddv).html(formatNumber(tempdv));
