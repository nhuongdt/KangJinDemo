                                        <td v-if="CheckColShow('colTrangThai')" v-on:click="RowSelected(item)">
                                            {{item.STrangThai}}
                                        </td>
                                        <td v-if="CheckColShow('colNguoiTao')" v-on:click="RowSelected(item)">
                                            {{item.NguoiTao}}
