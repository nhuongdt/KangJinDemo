                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th class="@commonEnum.TypeReportOrder.Order_machungtu text-left">Mã chứng từ</th>
                                            <th class="@commonEnum.TypeReportOrder.Order_ngay text-center"> Ngày chứng từ</th>
