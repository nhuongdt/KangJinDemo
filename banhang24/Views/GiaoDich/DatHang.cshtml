                                <li>
                                    <label><input type="checkbox" data-bind="checked: TT_DaDuyet"> Đã lưu</label>
                                </li>
                                <li>
                                    <label><input type="checkbox" data-bind="checked: TT_GiaoHang">Đang lưu hàng</label>
                                </li>
